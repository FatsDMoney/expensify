{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "node": true,
        "browser": true,
        "es6": true,
        "jest": true
    },
    "rules": {
        "semi": 2,
        "no-console": "off",
        "no-empty": "warn",
        "no-unused-vars": "off"
    },
    "globals": {
        "ReactDOM": true,
        "React": true
    },
    "parser": "babel-eslint"
}